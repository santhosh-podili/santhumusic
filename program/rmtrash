import os
from pyrogram import Client, filters
from pyrogram.types import Message
from driver.filters import command, other_filters
from driver.decorators import sudo_users_only, errors

downloads = os.path.realpath("program/downloads")
raw = os.path.realpath(".")

@Client.on_message(command(["rmd", "clear"]) & ~filters.edited)
@errors
@sudo_users_only
async def clear_downloads(_, message: Message):
    ls_dir = os.listdir(downloads)
    if ls_dir:
        for file in os.listdir(downloads):
            os.remove(os.path.join(downloads, file))
        await message.reply_text("‚úÖ **·¥Ö·¥á ü·¥á·¥õ·¥á·¥Ö ·¥Ä ü ü ·¥Ö·¥è·¥°…¥ ü·¥è·¥Ä·¥Ö·¥á·¥Ö “ì…™ ü·¥ás**")
    else:
        await message.reply_text("‚ùå **…¥·¥è “ì…™ ü·¥ás ·¥Ö·¥è·¥°…¥ ü·¥è·¥Ä·¥Ö·¥á·¥Ö**")

        
@Client.on_message(command(["rmw", "clean"]) & ~filters.edited)
@errors
@sudo_users_only
async def clear_raw(_, message: Message):
    ls_dir = os.listdir(raw)
    if ls_dir:
        for file in os.listdir(raw):
            if file.endswith('.raw'):
                os.remove(os.path.join(raw, file))
        await message.reply_text("‚úÖ **·¥Ö·¥á ü·¥á·¥õ·¥á·¥Ö ·¥Ä ü ü  Ä·¥Ä·¥° “ì…™ ü·¥ás**")
    else:
        await message.reply_text("‚ùå **…¥·¥è  Ä·¥Ä·¥° “ì…™ ü·¥ás “ì·¥è·¥ú…¥·¥Ö**")


@Client.on_message(command(["cleanup"]) & ~filters.edited)
@errors
@sudo_users_only
async def cleanup(_, message: Message):
    pth = os.path.realpath(".")
    ls_dir = os.listdir(pth)
    if ls_dir:
        for dta in os.listdir(pth):
            os.system("rm -rf *.raw *.jpg")
        await message.reply_text("‚ù§ **·¥Ñ ü·¥á·¥Ä…¥·¥á·¥Ö**")
    else:
        await message.reply_text("üíò **·¥Ä ü Ä·¥á·¥Ä·¥Ö è ·¥Ñ ü·¥á·¥Ä…¥·¥á·¥Ö**")

